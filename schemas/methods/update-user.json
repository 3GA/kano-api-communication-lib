{
    "$schema": "http://json-schema.org/draft-6/schema#",
    "description": "Argument passed to `updateUser` method",
    "type": "object",
    "required": [ "params" ],
    "properties": {
        "params": {
            "allOf": [
                { "$ref": "entities/user.json" },
                {
                    "oneOf": [
                        { "required": [ "username" ] },
                        { "required": [ "id" ] }
                    ]
                }
            ]
        },
        "populate": { "type": "object" }
    }
}
